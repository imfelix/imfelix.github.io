          %input#name.border.border-grey-light.rounded.py1.px2.order2{ type: "text", name: "Name", required: "true" }
          %label.order-1.uppercase.grey-light.semi.font-smaller.mb1{ for: "name" } Name
        .flex.flex-column.w-100.mb4
          %input#email-address.border.border-grey-light.rounded.py1.px2.order2{ type: "email", name: "_replyto", required: "true" }
          %label.order-1.uppercase.grey-light.semi.font-smaller.mb1{ for: "email-address" } Email Address
        .flex.flex-column.w-100.mb4
          %textarea#message.border.border-grey-light.rounded.py1.px2.min-h-150px.order2{ type: "email", name: "Message", required: "true" }
          %label.order-1.uppercase.grey-light.semi.font-smaller.mb1{ for: "message" } Message
        %input{ name: "_format", type: "hidden", value: "plain" }
