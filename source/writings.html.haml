      .flex.flex-wrap.font-small.uppercase.header.grey.mb2
        %span.m0= date_format(article.date)
        %span.m0.px1.grey-lighter /
        %span.m0= article.data.read_time
        %span.m0.px1.grey-lighter /
        - article.data.tag.each do |tag|
          %span.m0.mr2
            \##{tag}
      %h2.mt0.mb1.sm-mb2.grey-darker.bold.line-height-title.font-larger.sm-font-double.sm-font-title= article.title
      %p.m0.grey-light.font-large.line-height-small= article.data.summary
