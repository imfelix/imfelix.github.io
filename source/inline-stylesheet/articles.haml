/** articles.css **/
:css
  header { margin-bottom: 6rem; }
  img { display: block; margin-left: auto; margin-right: auto; margin-bottom: 2rem; border-radius: 3px; }
  h1, h2, h3, h4, h5, h6 { margin-top: 0; margin-bottom: 1rem; font-family: "canada-type-gibson", "Helvetica Neue", Helvetica, Arial, sans-serif; line-height: 1.125; text-transform: capitalize; }
  h1, h2, h3 { line-height: 1.125; }
  h2, h3 { color: #555555; }
  h4, h5, h6 { color: #888888; letter-spacing: 0.25px; text-transform: uppercase; }
  h1 { font-size: 3.75rem; }
  h2 { font-size: 3rem; }
  h3 { font-size: 2.25rem; }
  @media screen and (min-width: 768px) { h4 { font-size: 1.875rem; }
    h5 { font-size: 1.5rem; }
    h6 { font-size: 1.3125rem; } }
  p { margin-top: 0; margin-bottom: 3rem; font-size: 1.875rem; font-family: "freight-text-pro", Georgia, "Times New Roman", Times, serif; line-height: 1.555; }
  @media screen and (min-width: 768px) { p { font-size: 2.25rem; } }
  p + h2, p + h3 { margin-top: 6rem; }
  blockquote { margin-right: 0; margin-left: 0; margin-top: 9rem; margin-bottom: 9rem; }
  @media screen and (min-width: 768px) { blockquote { margin-left: 3rem; } }
  blockquote p { font-weight: 700; font-size: 2.25rem; font-family: "freight-text-pro", Georgia, "Times New Roman", Times, serif; line-height: 1.5; }
  @media screen and (min-width: 768px) { blockquote p { font-size: 3rem; } }
  blockquote p:nth-last-child(2) { margin-bottom: 0.5rem; }
  blockquote cite { color: #888888; font-weight: 400; font-style: normal; font-size: 1.5rem; font-family: Courier, "Lucida Console", Monaco, monospace; letter-spacing: -0.5px; }
  @media screen and (min-width: 768px) { blockquote cite { font-size: 1.875rem; } }
  q { position: relative; display: block; margin-top: 12rem; margin-bottom: 12rem; text-align: center; font-size: 2.25rem; letter-spacing: 0.5px; font-family: "freight-sans-pro", "Helvetica Neue", Helvetica, Arial, sans-serif; line-height: 1.25; }
  @media screen and (min-width: 768px) { q { font-size: 3rem; } }
  q::before, q::after { content: ''; width: 3rem; height: 2px; background-color: currentColor; position: absolute; left: 50%; transform: translateX(-50%); }
  q::before { top: -4rem; }
  q::after { bottom: -4rem; }
  sup a { position: relative; padding-left: 0.5rem; padding-right: 0.5rem; text-decoration: underline; border: 0; }
  sup a:before { content: ""; position: absolute; top: -10rem; right: 0; left: 0; height: 100%; margin: 0; }
  .footnotes p { font-size: 1.5rem; }
  .footnotes a { font-size: 1.125rem; }
  [data-attr="content"] a { border-bottom: 1px solid; }
  [data-attr="content"] code { font-size: 1.875rem; }
  [data-attr="content"] ul { list-style: none; list-style-image: none; font-size: 1.875rem; font-family: "freight-text-pro", Georgia, "Times New Roman", Times, serif; line-height: 1.555; }
  @media screen and (min-width: 768px) { [data-attr="content"] ul { font-size: 2.25rem; } }
  [data-attr="content"] ul + h2, [data-attr="content"] ul + h3 { margin-top: 8rem; }
  [data-attr="content"] ul li { position: relative; margin-bottom: 1.5rem; padding-left: 2rem; }
  [data-attr="content"] ul li::before { content: 'â€¢'; position: absolute; top: 6px; left: 0; font-size: 1.125rem; }
  @media screen and (min-width: 768px) { [data-attr="content"] ul li::before { top: 8px; } }
  [data-attr="content"] sup a { border: 0; }
  [data-attr="content"] [id*="anchor"]:target:before { content: ""; display: block; height: 2.5rem; margin-top: 2.5rem; margin-right: 0; margin-bottom: 0; margin-left: 0; }
