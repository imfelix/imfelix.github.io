!!!
%html{ dir: 'ltr', lang: 'en' }
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
    %meta{ content: "width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no", name: "viewport" }
    %title= current_page.data.title || "Felix Lee"

    / Meta Tags
    = partial "layouts/meta"

    / Favicon
    = partial "layouts/favicon"

    / Stylesheet
    = stylesheet_link_tag "site"

    :css
      .wf-loading h1,
      .wf-loading h2,
      .wf-loading h3,
      .wf-loading h4,
      .wf-loading h5,
      .wf-loading h6,
      .wf-loading p,
      .wf-loading span,
      .wf-loading div,
      .wf-loading a,
      .wf-loading code,
      .wf-loading pre {
        color: transparent !important;
      }

    / Typekit
    %script{ src: "https://use.typekit.net/ejv2ypd.js" }
    :javascript
      try{Typekit.load({ async: true });}catch(e){}

  %body
    = yield

  / JavaScript
  / = javascript_include_tag :all

  / Google Analytics
  = partial "layouts/analytics"
