!!!
%html{ dir: 'ltr', lang: 'en' }
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
    %meta{ content: "width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no", name: "viewport" }
    %title= current_page.data.title || "Felix Lee - UI/UX Designer & Web Developer"

    / Meta Tags
    = partial "partials/meta"

    / Favicon
    = partial "partials/favicon"

    / Stylesheet
    = partial "inline-stylesheet/normalize-styles"
    = partial "inline-stylesheet/base-styles"
    / = stylesheet_link_tag "site"

  %body.relative.flex.flex-column.min-h-100{ class: page_classes }
    = partial "partials/header"
    %main.relative.flex.flex-auto= yield
    = partial "partials/footer"

  / Typekit
  %script{ src: "//use.typekit.net/ejv2ypd.js" }
  :javascript
    try{Typekit.load({ async: true });}catch(e){}

  / JavaScript
  = javascript_include_tag :all

  / Google Analytics
  / = partial "partials/analytics"
