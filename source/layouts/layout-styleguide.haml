!!!
%html{ dir: 'ltr', lang: 'en' }
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
    %meta{ content: "width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no", name: "viewport" }
    %title= current_page.data.title || "Felix Lee ðŸ¦„"

    / Meta Tags
    = partial "partials/meta"

    / Favicon
    = partial "partials/favicon"

    / Stylesheet
    = partial "inline-stylesheet/font-loading"
    = partial "inline-stylesheet/site"
    = partial "inline-stylesheet/articles"
    / = stylesheet_link_tag :articles

    / FullStory Recording Snippet
    = partial "partials/fullstory"

    / JavaScript
    = javascript_include_tag :all

  %body.relative.flex.flex-column.min-h-100{ class: page_classes }
    = partial "partials/header"
    %main.max-w-700px.w-100.mx-auto.flex.flex-column.flex-auto.px3.sm-px0.pt16.sm-pt32.pb0
      %article{ data: { attr: "content" } }= yield
    = partial "partials/footer"

  / Typekit - Styleguide
  %script{ src: "//use.typekit.net/ltq8mux.js" }
  :javascript
    try{Typekit.load({ async: true });}catch(e){}


  / Google Analytics
  = partial "partials/analytics"
