!!!
%html{ dir: 'ltr', lang: 'en' }
  %head
    %meta{ charset: "utf-8" }
    %meta{ content: "IE=edge,chrome=1", "http-equiv" => "X-UA-Compatible" }
    %meta{ content: "width=device-width, initial-scale=1.0, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no", name: "viewport" }
    %title= current_page.data.title || "Felix Lee"

    / Meta Tags
    = partial "partials/meta"

    / Favicon
    = partial "partials/favicon"

    / Stylesheet
    / = partial "partials/styles"
    / TODO: Add article styles
    = stylesheet_link_tag "site"

    / Typekit Loading Styles
    :css
      .wf-loading h1,
      .wf-loading h2,
      .wf-loading h3,
      .wf-loading h4,
      .wf-loading h5,
      .wf-loading h6,
      .wf-loading p,
      .wf-loading span,
      .wf-loading div,
      .wf-loading a,
      .wf-loading code,
      .wf-loading pre {
        color: transparent !important;
        visibility: hidden !important;
      }

    / JavaScript
    = javascript_include_tag :all

  %body.relative.flex.flex-column.min-h-100{ class: page_classes, onload: "mainPosition()" }
    = partial "partials/header-article"
    %main.max-w-620px.w-100.mx-auto.py0.sm-py4.flex.flex-column.flex-auto.fade-in-up.px3.sm-px0
      %article{ data: { content: "article" } }= yield
    = partial "partials/footer-article"

  / Typekit
  %script{ src: "//use.typekit.net/ejv2ypd.js" }
  :javascript
    try{Typekit.load({ async: true });}catch(e){}


  / Google Analytics
  = partial "partials/analytics"
